# Trading Bot Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ============================================
# EXCHANGE API KEYS (Paper trading = optional)
# ============================================

# Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here

# Coinbase
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET=your_coinbase_secret_here

# Kraken (optional)
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_SECRET=your_kraken_secret_here

# Bybit (optional)
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_SECRET=your_bybit_secret_here

# KuCoin (optional)
KUCOIN_API_KEY=your_kucoin_api_key_here
KUCOIN_SECRET=your_kucoin_secret_here
KUCOIN_PASSPHRASE=your_kucoin_passphrase_here

# ============================================
# SOLANA DEX (Required for on-chain trading)
# ============================================

# Your Solana wallet private key (base58 encoded)
# Generate with: python -c "from solders.keypair import Keypair; kp = Keypair(); print(kp.to_base58_string())"
SOLANA_PRIVATE_KEY=your_base58_private_key_here

# Solana RPC endpoint (free or paid)
# Free: https://api.mainnet-beta.solana.com
# Paid (faster): https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# ============================================
# ALERT NOTIFICATIONS (Optional)
# ============================================

# Telegram Bot
# Get token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Discord Webhook
# Create in channel settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL

# ============================================
# BOT CONFIGURATION
# ============================================

# Trading mode: paper or live
TRADING_MODE=paper

# Initial balance for paper trading (USD)
PAPER_BALANCE=10000

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
