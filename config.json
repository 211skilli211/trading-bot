{
  "_comment": "Trading Bot Configuration - Adjust these settings as needed",
  
  "bot": {
    "mode": "paper",
    "log_file": "trading_bot.log",
    "monitor_interval": 60
  },
  
  "strategy": {
    "fee_rate": 0.001,
    "slippage": 0.0005,
    "min_spread": 0.005,
    "paper_trading": true
  },
  
  "risk": {
    "max_position_btc": 0.02,
    "stop_loss_pct": 0.015,
    "take_profit_pct": null,
    "capital_pct_per_trade": 0.03,
    "max_total_exposure_pct": 0.25,
    "initial_balance": 5000.0,
    "daily_loss_limit_pct": 0.03
  },
  
  "execution": {
    "max_retries": 3,
    "retry_delay": 1.0
  },
  
  "exchanges": {
    "enabled": ["binance", "coinbase", "kraken"],
    "pairs": ["BTC/USDT", "BTC/USD"]
  },
  
  "alerts": {
    "enabled": true,
    "telegram": {
      "enabled": false,
      "bot_token": "YOUR_BOT_TOKEN",
      "chat_id": "YOUR_CHAT_ID"
    },
    "discord": {
      "enabled": false,
      "webhook_url": "YOUR_WEBHOOK_URL"
    },
    "on_trade": true,
    "on_stop_loss": true,
    "on_daily_limit": true
  },
  
  "dashboard": {
    "enabled": true,
    "port": 8080,
    "refresh_interval": 5
  }
}
